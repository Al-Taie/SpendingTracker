<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.watermelon.spendingtracker.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F6FF">


        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="Ammar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_notifications"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/balance_text"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/balance_value"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Balance" />

        <TextView
            android:id="@+id/balance_value"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/balance_text"
            app:layout_constraintRight_toRightOf="@id/balance_text"
            app:layout_constraintTop_toBottomOf="@id/balance_text"
            tools:text="$1,200" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintLeft_toLeftOf="@id/balance_value"
            app:layout_constraintRight_toRightOf="@id/balance_value"
            app:layout_constraintTop_toBottomOf="@id/balance_value" />

        <TextView
            android:id="@+id/time_tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:text="Time tracking"
            app:layout_constraintLeft_toLeftOf="@id/card_view"
            app:layout_constraintTop_toTopOf="@id/card_view" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@id/card_view"
            app:layout_constraintLeft_toLeftOf="@id/time_tracking"
            app:layout_constraintRight_toRightOf="@id/card_view"
            app:layout_constraintTop_toTopOf="@id/card_view" />

        <TextView
            android:id="@+id/spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:elevation="8dp"
            android:text="spend"
            app:layout_constraintLeft_toLeftOf="@id/progress_bar"
            app:layout_constraintTop_toBottomOf="@id/progress_bar" />

        <TextView
            android:id="@+id/total_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:elevation="8dp"
            android:text="Total balance"
            app:layout_constraintRight_toRightOf="@id/progress_bar"
            app:layout_constraintTop_toBottomOf="@id/progress_bar" />


        <TextView
            android:id="@+id/expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="8dp"
            android:text="expenses"
            app:layout_constraintLeft_toLeftOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="8dp"
            android:text="See all>>"
            app:layout_constraintRight_toRightOf="@id/card_view"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expenses_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:items="@{viewmodel.spending}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/expenses"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:listitem="@layout/item_spending"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>