<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.watermelon.spendingtracker.ui.statistic.StatisticViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_shape"
        tools:context=".ui.statistic.StatisticFragment">

        <!--        <TextView-->
        <!--            android:id="@+id/user_name"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="@dimen/margin24dp"-->
        <!--            android:text="@{viewmodel.user.toString()}"-->
        <!--            android:textColor="@color/black"-->
        <!--            android:textSize="@dimen/text18sp"-->
        <!--            android:textStyle="bold"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <!--        <ImageView-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="@dimen/margin24dp"-->
        <!--            android:layout_marginStart="@dimen/margin8dp"-->
        <!--            android:src="@drawable/ic_arrow_down"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/user_name"-->
        <!--            app:layout_constraintStart_toEndOf="@id/user_name"-->
        <!--            app:layout_constraintTop_toTopOf="@id/user_name" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/spinner"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/selected_meme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textAutoComplete"
                app:users="@{viewmodel.users}"
                android:text="user"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin24dp"
            android:layout_marginTop="@dimen/margin16dp"
            android:background="@drawable/group_chips_shape"
            android:clipToPadding="false"
            android:paddingStart="@dimen/padding16dp"
            android:paddingEnd="@dimen/padding16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/weakly"
                style="@style/Widget.MyApp.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_shape"
                android:checked="true"
                android:text="@string/weakly"
                android:textColor="@color/primary_color"
                app:chipCornerRadius="6dp"
                app:chipEndPadding="@dimen/padding16dp"
                app:chipStartPadding="@dimen/padding16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/monthly"
                style="@style/Widget.MyApp.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_shape"
                android:text="@string/monthly"
                android:textColor="@color/primary_color"
                app:chipCornerRadius="6dp"
                app:chipEndPadding="@dimen/padding16dp"
                app:chipStartPadding="@dimen/padding16dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/yearly"
                style="@style/Widget.MyApp.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_shape"
                android:text="@string/yearly"
                android:textColor="@color/primary_color"
                app:chipCornerRadius="6dp"
                app:chipEndPadding="@dimen/padding16dp"
                app:chipStartPadding="@dimen/padding16dp" />

        </com.google.android.material.chip.ChipGroup>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="@dimen/margin24dp"
            android:layout_marginTop="@dimen/margin16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/radius8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group" />


        <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin16dp"
            android:elevation="2dp"
            android:text="@string/overview"
            android:textColor="@color/black"
            android:textSize="@dimen/text18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintTop_toTopOf="@id/card_view" />

        <TextView
            android:id="@+id/income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16dp"
            android:elevation="2dp"
            android:text="@string/income"
            android:textColor="@color/black"
            android:textSize="@dimen/text14sp"
            app:layout_constraintStart_toStartOf="@+id/overview"
            app:layout_constraintTop_toBottomOf="@id/overview" />

        <TextView
            android:id="@+id/Expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16dp"
            android:elevation="2dp"
            android:text="@string/expense"
            android:textColor="@color/black"
            android:textSize="@dimen/text14sp"
            app:layout_constraintStart_toStartOf="@+id/overview"
            app:layout_constraintTop_toBottomOf="@id/income" />

        <TextView
            android:id="@+id/Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16dp"
            android:elevation="2dp"
            android:text="@string/total"
            android:textColor="@color/black"
            android:textSize="@dimen/text14sp"
            app:layout_constraintStart_toStartOf="@+id/overview"
            app:layout_constraintTop_toBottomOf="@id/Expense" />

        <TextView
            android:id="@+id/income_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin16dp"
            android:elevation="2dp"
            android:text="@{viewmodel.salary.salaryAmount}"
            tools:text="2000"
            android:textColor="@color/blue"
            android:textSize="@dimen/text14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintTop_toTopOf="@id/income" />

        <TextView
            android:id="@+id/expense_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin16dp"
            android:elevation="2dp"
            android:text="@{String.valueOf(viewmodel.spending)}"
            android:textColor="@color/red"
            android:textSize="@dimen/text14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintTop_toTopOf="@id/Expense" />

        <TextView
            android:id="@+id/total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin16dp"
            android:elevation="2dp"
            android:text="100 IQD"
            android:textColor="@color/base_color"
            android:textSize="@dimen/text14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:layout_constraintTop_toTopOf="@id/Total" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_two"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="@dimen/margin24dp"
            android:layout_marginTop="@dimen/margin16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/radius8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <com.hadiidbouk.charts.ChartProgressBar
            android:id="@+id/ChartProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/margin32dp"
            android:elevation="2dp"
            android:gravity="center"
            app:hdBarCanBeClick="true"
            app:hdBarHeight="170dp"
            app:hdBarRadius="10dp"
            app:hdBarTitleColor="@color/bar_title_color"
            app:hdBarTitleMarginTop="9dp"
            app:hdBarTitleSelectedColor="@color/base_color"
            app:hdBarTitleTxtSize="12sp"
            app:hdBarWidth="7dp"
            app:hdEmptyColor="@color/empty"
            app:hdMaxValue="10"
            app:hdPinBackgroundColor="@color/pin_background"
            app:hdPinMarginBottom="55dp"
            app:hdPinMarginEnd="22dp"
            app:hdPinMarginTop="10dp"
            app:hdPinPaddingBottom="5dp"
            app:hdPinTextColor="@color/pin_text"
            app:hdPinTxtSize="17sp"
            app:hdProgressClickColor="@color/black"
            app:hdProgressColor="@color/progress"
            app:hdProgressDisableColor="@color/progress_disable"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_two"
            app:layout_constraintEnd_toEndOf="@+id/card_view_two"
            app:layout_constraintStart_toStartOf="@+id/card_view_two"
            app:layout_constraintTop_toTopOf="@id/card_view_two" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_three"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="@dimen/margin24dp"
            android:layout_marginTop="@dimen/margin16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/radius8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_two" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:elevation="@dimen/margin2dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_three"
            app:layout_constraintEnd_toEndOf="@id/card_view_three"
            app:layout_constraintStart_toStartOf="@+id/card_view_three"
            app:layout_constraintTop_toTopOf="@id/card_view_three" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>