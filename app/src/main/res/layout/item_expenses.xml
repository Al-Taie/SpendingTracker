<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
       android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/categories"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categories_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="48dp"
                app:layout_constraintBottom_toBottomOf="@id/categories"
                app:layout_constraintLeft_toLeftOf="@id/categories"
                app:layout_constraintTop_toTopOf="@id/categories"
                tools:text="categories name" />


            <TextView
                android:id="@+id/spent_money"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginRight="48dp"
                app:layout_constraintBottom_toBottomOf="@id/categories"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$11.000" />


            <TextView
                android:id="@+id/spent_money_date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"

                app:layout_constraintLeft_toLeftOf="@id/spent_money"
                app:layout_constraintRight_toRightOf="@id/spent_money"
                app:layout_constraintTop_toBottomOf="@id/spent_money"
                tools:text="2021/11/22" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>