<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.watermelon.spendingtracker.model.data.database.entities.Spending" />

        <variable
            name="listener"
            type="com.watermelon.spendingtracker.ui.home.TemplateInteractionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
       android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/categories"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:elevation="1dp"
                app:image="@{item.iconId}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_shape"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categories_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="48dp"
                android:textColor="@color/black"
                android:text="@{item.categoryName}"
                app:layout_constraintBottom_toBottomOf="@id/categories"
                app:layout_constraintLeft_toLeftOf="@id/categories"
                app:layout_constraintTop_toTopOf="@id/categories"
                tools:text="categories name" />


            <TextView
                android:id="@+id/spent_money"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="48dp"
                android:textSize="@dimen/text18sp"
                android:textColor="@color/red"
                android:text="@{String.valueOf(item.amount)}"
                app:layout_constraintBottom_toBottomOf="@id/categories"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$11.000" />


            <TextView
                android:id="@+id/spent_money_date"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                app:date="@{item.date}"
                android:textSize="@dimen/text12sp"
                app:layout_constraintLeft_toLeftOf="@id/spent_money"
                app:layout_constraintRight_toRightOf="@id/spent_money"
                app:layout_constraintTop_toBottomOf="@id/spent_money"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>